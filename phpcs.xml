<?xml version="1.0"?>
<ruleset name="News Portal">
    <description>News Portal Application</description>
    <!-- Show colors in console -->
    <arg value="-colors"/>
    <!-- Show sniff codes in all reports -->
    <arg value="s"/>
    <!-- Use PSR-2 as a base -->
    <rule ref="PSR2"/>
    <file>app/Console</file>
    <file>app/Exceptions</file>
    <file>app/Http</file>
    <file>app/Providers</file>
    <file>tests/Unit</file>
    <file>tests/Feature</file>
</ruleset>